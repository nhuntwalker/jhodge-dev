{% extends "layout.jinja2" %}

{% block content %}
<main>
    <section id="film-banner">
        <img src="{{ the_film.screenshot_url }}" />
{#         <div class="video-btn">
            <img src="{{ request.static_path('jhodge_public:static/STATIC/video-play-button.png') }}" />
        </div> #}
    </section>
    <section id="content">
        <div class="big-content black">
            <h1>{{ the_film.title }}</h1>
            <div class="horizontal-bar white"></div>
            <div class="media-meta film">
                <ul>
                    <li>Watch the trailer <a href="{{ the_film.trailer }}"><i class="fa fa-film" aria-hidden="true"></i></a></li>
                </ul>
            </div>
            <article class="film-description">
                {% for paragraph in full_text %}
                    <p>{{ paragraph }}</p>
                {% endfor %}
            </article>
        </div>
    </section>
</main>
{% endblock content %}